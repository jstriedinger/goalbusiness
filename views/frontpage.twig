{% extends 'base.html.twig' %}
{% block content %}
<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item">
        nuestra empresa
      </a>

      <a class="navbar-item">
        Competencias
      </a>
      <a class="navbar-item">
        giras deportivas
      </a>
      <a class="navbar-item">
        Marketing
      </a>
      <a class="navbar-item">
        nuestros clientes
      </a>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <a class="button is-primary">
            <strong>contactanos</strong>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>
<section class="hero is-large" id="home">
  <div class="mask"></div>
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-two-thirds">
          <h1 class="subtitle is-3">
            {{post.headline}}
          </h1>
          
        </div>
      </div>
    </div>
  </div>
  <div class="wrapper white bordered">
      <div class="container">
        <div class="columns is-vcentered is-multiline">
          <div class="column is-narrow">
            <h5 class="title is-6 is-capitalized">Quienes han confiado en nosotros</h5>
          </div>
          {% for client in post.get_field("clients") %}
          <div class="column has-text-centered">
            <a href="{{client.external_link}}">
              <img src="{{client.img.url}}" alt="{{client.img.alt}}">
            </a>
          </div>
          {% endfor %}
        </div>
      </div>
  </div>
</section>
<section class="section" id="main">
  <div class="container">
    <div class="columns is-variable-in-desktop is-8" style="align-items: baseline">
      <div class="column is-narrow">
        <h2 class="title is-2 is-capitalized">competencias</h2>
      </div>
      <div class="column">
        <h5 class="subtitle is-6">blabla</h5>
      </div>
    </div>
    <div class="columns is-vcentered is-multiline is-variable-in-desktop is-8">
      {% for item in post.get_field("competencias") %}
      <div class="column is-half">
        <div class="card goalcard {{item.title}}">
          <div class="mask"></div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                  <img src="{{item.logo}}" alt="{{item.title}} goal business">
              </div>
              <div class="media-content">
                 {{item.desc}}
              </div>
            </div>
          </div>
        </div>
      </div>
       {% endfor %}
    </div>
  </div>
</section>
<section class="section" id="gira">
  <div class="mask"></div>
  <div class="container">
    <div class="columns reversed">
      <div class="column is-one-third">
        <div class="tag is-medium" style="margin: 0 auto">
          gira deportiva  
        </div>
        <img src="{{theme.link}}/dist/img/destinofutbol.png" alt="destino futbol goal business" style="max-width:75%;margin:0 auto">
      </div>
    </div>
  </div>
</section>
<div class="wrapper white border-top">
    <div class="container">
      <div class="columns is-vcentered is-multiline">
        <div class="column">
          <img src="{{theme.link}}/dist/img/havas.jpg" alt="havas medio group">
        </div>
        <div class="column">
          <img src="{{theme.link}}/dist/img/estrella.jpg" alt="grupo empresarial estrella">
        </div>
        <div class="column">
          <img src="{{theme.link}}/dist/img/people.jpg" alt="peple plays">
        </div>
        <div class="column">
          <img src="{{theme.link}}/dist/img/zoom.jpg" alt="zoom sports">
        </div>
        <div class="column">
          <img src="{{theme.link}}/dist/img/disney.jpg" alt="disney once">
        </div>
        <div class="column">
          <img src="{{theme.link}}/dist/img/google.jpg" alt="gogle colombia">
        </div>
        <div class="column">
          <img src="{{theme.link}}/dist/img/falcao.jpg" alt="fundacion falcao">
        </div>
        
      </div>
    </div>
</div>
{% endblock %}